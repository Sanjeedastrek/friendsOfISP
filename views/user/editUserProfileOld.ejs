<!-- this is edit package form-->

<% include ./partials/header %>

 <div id="main">

	<form method="POST" action="/profile/edit?_method=PUT" class="container form-resize">
	 	<fieldset class="p-5 m-4">
	 		<legend class="text-center p-4"> Edit Profile </legend>
	 		<div class="form-group">
			    <label for="nameOfIsp"> Name of ISP </label>
			    <input type="text" class="form-control" name="user[nameOfIsp]" id="nameOfIsp" value="<%= user.nameOfIsp %>" autofocus>
			</div>
			
      		<div class="form-group mr-3">
				<label for="normalSpeed"> Normal Speed </label>
				<div class="input-icon-right">
				    <input type="number" class="form-control" name="package[normalSpeed]" id="normalSpeed" value="<%= package.normalSpeed %>" maxlength="6"oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);">
	      				<i class="right-align">mbps</i>
	      		</div>
	      	</div>

      		<input type="submit" id="user-profile-edit" value="Submit" class="col-12 col-md-4 btn submit">  
			<input type="reset" value="Reset" class="col-12 col-md-4 btn reset">
	 	</fieldset>
	</form>

 </div>
<% include ./partials/footer %>


