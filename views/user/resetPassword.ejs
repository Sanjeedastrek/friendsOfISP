<% include ../partials/header %>
<div id="main">
    <form action="/reset/<%=token%>" method="POST" class="container form-resize">
        <fieldset class="p-2 mt-4">
	        <legend class="text-center p-4"> Forgot Password<br> <span class="font-italic">Please enter new password </span> </legend>
		        <div class="form-group">
		            <label for="password">New Password</label>
		            <input type="password" name="password" value="" placeholder="New password" autofocus="autofocus" class="form-control"  minlength="8"required >
		        </div>
    		    <div class="form-group">
    		        <label for="confirm">Confirm Password</label>
    		        <input type="password" name="confirm" value="" placeholder="Confirm password" class="form-control"  minlength="8" required>
    		    </div>
    		  <div class="form-group">
    		    <button type="submit" class="col-12 col-md-4 btn submit">Update Password</button>
    		  </div>
    </form>
</div>

<% include ../partials/footer %>